<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="/Content/Site.css" rel="stylesheet" type="text/css" />


    <title>@ViewBag.Title - My ASP.NET Application Layout is loading</title>


</head>
<body>

    <nav class="navbar sticky-top navbar-expand-lg">
        <div class="container-fluid row">
       
            <div class="d-flex align-items-center bg-white rounded shadow-sm">

                <div class="col-3">
                    <img class="me-3" src="~/Content/Images/logo-invert.svg" alt="" width="100" height="100">



                </div>


                @*// Need to fix collapsing feature*@

                <div class=" col-7">

                    <ul class="navbar-nav ps-5 ms-5">
                        <li class="nav-item">
                            <div class="px-3">
                                @Html.ActionLink("Home", "Index", "Home", null, new { @style = "text-decoration: none; color: black;" })

                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="px-3 ">
                                @Html.ActionLink("Query", "Query", "Query", null, new { @style = "text-decoration: none; color: black;" })

                            </div>
                        </li>

                        <li class="nav-item">
                            <div class="px-3 ">
                                @Html.ActionLink("Imported records", "ViewPartnerRecords", "Read", null, new { @style = "text-decoration: none; color: black;" })

                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="px-3 ">
                                @Html.ActionLink("Scheduled Queries", "ViewScheduledQueries", "Read", null, new { @style = "text-decoration: none; color: black;" })

                            </div>
                        </li>

                    </ul>
                </div>

                <div class="col">

                    @if (InternshipProjectRetry.Controllers.LoginController.getLoginStatus())
                    {
                     
                            <div class="px-1 ">
                                @Html.ActionLink("Log Out", "Logout", "Login", null, new { @class = "btn", @style = "background-color: #9d2c9e; color: white" })

                            </div>
                    }
                    else
                    {
                            <div class="px-1 ">
                                @Html.ActionLink("Log in", "Login", "Login", null, new { @class = "btn", @style = "background-color: #9d2c9e; color: white" })
                            </div>

                    }
                </div>

                <div class="lh-1 col ">

                    <h1 class="h6 mb-0 text-dark lh-1">Internship Project</h1>
                    <small class="text-dark">John Murphy</small>
                </div>
            </div>

            </div>

    </nav>



    <div class="container body-content pt-5">
        @RenderBody()
       
        <footer>
           
        </footer>
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
