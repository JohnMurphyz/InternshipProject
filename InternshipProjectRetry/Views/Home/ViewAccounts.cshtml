

@{
    ViewBag.Title = "ViewAccounts";
}


<style>
    .loginPage {
        align-items: center;
        margin: auto;
    }

    .form-signin {
        width: 100%;
        padding: 15px;
        margin: auto;
    }

    .box {
        min-width: 200px;
        max-width: 30%;
    }
</style>



<div class="loginPage row box">

    @using (Html.BeginForm("ViewFields", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-signin rounded container-fluid shadow-sm p-5 text-center">

            <img class="me-3" src="~/Content/Images/Salesforceicon.png" alt="" width="100" height="100">


            <h5 class="pt-3">Please select an account to query</h5>


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group pt-1">
                @Html.DropDownList("AccountNamelist", ViewBag.accountNameList as SelectList, "Please Select Account", new { @class = "form-select mx-auto" })

            </div>


            <div class="form-group pt-3">
                <div class="">
                    <input type="submit" value="Get Fields" class="btn btn-primary pt-2">
                </div>
            </div>


        </div>
    }


</div>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}


